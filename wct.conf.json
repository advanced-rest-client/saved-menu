{
  "verbose": false,
  "plugins": {
    "local": {
      "disabled": true,
      "browsers": ["chrome", "firefox"]
    },
    "sauce": {
      "disabled": true,
      "browsers": [{
        "browserName": "microsoftedge",
        "platform": "Windows 10",
        "version": ""
      }, {
        "browserName": "firefox",
        "platform": "Windows 10",
        "version": "latest"
      }, {
        "browserName": "chrome",
        "platform": "Windows 10",
        "version": "latest-4"
      }, {
        "browserName": "chrome",
        "platform": "Windows 10",
        "version": "latest"
      }]
    },
    "istanbub": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/*.html"
      ],
      "exclude": [
        "**/test/**",
        "**/demo/**",
        "**/tasks/**"
      ],
      "thresholds": {
        "global": {
          "statements": 80,
          "branches": 60,
          "functions": 90,
          "lines": 80
        }
      }
    }
  }
}
